<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeneralProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:listDivider">@color/colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.GeneralProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.GeneralProject.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- _________ Toolbar _________ -->
    <style name="ToolbarTheme" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/colorPrimary</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <!-- _________ TextView _________ -->

    <style name="CustomTextSmall" parent="TextAppearance.Material3.BodyLarge"/>

    <style name="CustomTextSmallBold" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextMedium" parent="TextAppearance.Material3.HeadlineSmall"/>

    <style name="CustomTextMediumBold" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerItemTextStyle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:drawablePadding">@dimen/_20sdp</item>
    </style>

    <!-- _________ Dialog _________ -->
    <style name="CustomRoundedAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CustomDialog.Rounded</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CustomDialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>