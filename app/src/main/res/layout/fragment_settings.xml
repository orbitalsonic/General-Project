<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_app_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_st_app_lang"
            android:drawablePadding="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/app_language"
            android:textColor="@color/neutral500"
            android:textSize="16sp" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_rate_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_st_rateus"
            android:drawablePadding="@dimen/_15sdp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/rate_on_play_store"
            android:textColor="@color/neutral500"
            android:textSize="16sp" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_share_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_st_share_app"
            android:drawablePadding="@dimen/_15sdp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/share_app_with_friends"
            android:textColor="@color/neutral500"
            android:textSize="16sp" />



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_st_contact_us"
            android:drawablePadding="@dimen/_15sdp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/contact_us"
            android:textColor="@color/neutral500"
            android:textSize="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_report_bugs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_st_bugs"
            android:drawablePadding="@dimen/_15sdp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/report_bugs_issues"
            android:textColor="@color/neutral500"
            android:textSize="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_st_privacy"
            android:drawablePadding="@dimen/_15sdp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/privacy_policy"
            android:textColor="@color/neutral500"
            android:textSize="16sp" />



        <LinearLayout
            android:id="@+id/btn_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_st_version"
                android:drawablePadding="@dimen/_15sdp"
                android:ellipsize="end"
                android:gravity="center|start"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="@string/app_version"
                android:textColor="@color/neutral500"
                android:textSize="16sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mtv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_4sdp"
                android:ellipsize="end"
                android:gravity="center|start"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textColor="@color/neutral400"
                android:textSize="14sp"
                tools:text="1.0.1" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>